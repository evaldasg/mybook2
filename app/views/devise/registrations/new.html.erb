<h2>Sign up</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-horizontal'} ) do |f| %>
  <%= devise_error_messages! %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :profile_name %>
  <%= f.input :email, :autofocus => true, :placeholder => 'your@email_address.com' %>
  <%= f.input :password, :hint => 'No special characters, please.' %>

  <%= f.input :password_confirmation, :hint => 'Must be the same as entered password' %>

  <div class="form-actions">
  <%= f.button :submit %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
